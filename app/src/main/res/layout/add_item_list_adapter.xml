<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="20dp"
    android:paddingEnd="15dp">

    <LinearLayout
        android:id="@+id/addItemListAdapterLayoutInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_toStartOf="@id/addItemListAdapterBtnDelete"
        android:layout_marginEnd="15dp">

        <TextView
            android:id="@+id/addItemListAdapterTxtName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:text="dfsghdjfkg"
            android:textSize="12sp"/>

        <EditText
            android:id="@+id/addItemListAdapterEtTotalItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="banyak"
            android:inputType="number"
            android:textSize="12sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/addItemListAdapterTxtMultiply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="x"
            android:textSize="12sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/addItemListAdapterTxtCurrency"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Rp"
            android:textSize="12sp"
            android:gravity="end"/>

        <EditText
            android:id="@+id/addItemListAdapterEtPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:hint="harga"
            android:inputType="number"
            android:textSize="12sp"
            android:gravity="center"/>

    </LinearLayout>

    <TextView
        android:id="@+id/addItemListAdapterTxtTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/colorTextBlack"
        android:textStyle="bold"
        android:gravity="end"
        android:text="asdfsgdhj"
        android:padding="5dp"
        android:layout_below="@id/addItemListAdapterLayoutInput"
        android:layout_alignEnd="@id/addItemListAdapterLayoutInput"/>

    <ImageButton
        android:id="@+id/addItemListAdapterBtnDelete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_delete_red"
        android:layout_gravity="center"
        android:layout_marginEnd="5dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        style="@style/Widget.AppCompat.Button.Borderless"
        tools:ignore="ContentDescription" />

</RelativeLayout>