<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/addItemListAdapterTxtName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:text="adsfgdhjf"
            android:textSize="12sp"/>

        <EditText
            android:id="@+id/addItemListAdapterEtTotalItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="banyak"
            android:inputType="number"
            android:textSize="12sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/addItemListAdapterTxtMultiply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="x"
            android:textSize="12sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/addItemListAdapterTxtCurrency"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Rp"
            android:textSize="12sp"
            android:gravity="end"
            android:layout_marginEnd="5dp"/>


        <EditText
            android:id="@+id/addItemListAdapterEtPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:hint="harga"
            android:inputType="number"
            android:textSize="12sp"
            android:gravity="center"/>

    </LinearLayout>

    <TextView
        android:id="@+id/addItemListAdapterTxtTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rp300.000"
        android:textSize="14sp"
        android:textColor="@color/colorTextBlack"
        android:textStyle="bold"
        android:gravity="end"
        android:padding="5dp"/>

</LinearLayout>