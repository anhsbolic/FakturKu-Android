<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    app:cardBackgroundColor="@color/colorInvoiceBg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/invoiceListAdapterTxtStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorInvoiceStatus"
            android:textColor="@color/colorTextBlack"
            android:textSize="12sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"/>

        <TextView
            android:id="@+id/invoiceListAdapterTxtId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorInvoiceId"
            android:textColor="@color/colorTextBlack"
            android:textSize="12sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_toEndOf="@id/invoiceListAdapterTxtStatus"
            android:layout_alignBaseline="@id/invoiceListAdapterTxtStatus"
            android:layout_marginStart="10dp"
            tools:ignore="RelativeOverlap" />

        <TextView
            android:id="@+id/invoiceListAdapterTxtCreatedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorInvoiceDueDate"
            android:textColor="@color/colorTextBlack"
            android:textSize="12sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignBaseline="@id/invoiceListAdapterTxtStatus"
            android:layout_marginEnd="10dp"
            tools:ignore="RelativeOverlap" />

        <TextView
            android:id="@+id/invoiceListAdapterTxtCostumerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextWhite"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_below="@id/invoiceListAdapterTxtStatus"
            android:layout_marginTop="24dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="20dp"
            android:layout_toStartOf="@id/invoiceListAdapterTxtTotal"
            android:layout_marginEnd="15dp"/>

        <TextView
            android:id="@+id/invoiceListAdapterTxtTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextWhite"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_below="@id/invoiceListAdapterTxtStatus"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_alignBaseline="@id/invoiceListAdapterTxtCostumerName"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>