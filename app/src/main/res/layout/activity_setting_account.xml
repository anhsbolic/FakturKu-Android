<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.settingAccount.SettingAccountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@color/colorPrimary">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/settingAccountImgUser"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:civ_border_color="@android:color/white"
                app:civ_border_width="2dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintVertical_bias="0.5"/>

            <TextView
                android:id="@+id/settingAccountTxtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/colorTextWhite"
                app:layout_constraintTop_toTopOf="@id/settingAccountImgUser"
                app:layout_constraintBottom_toTopOf="@id/settingAccountTxtEmail"
                app:layout_constraintLeft_toRightOf="@id/settingAccountImgUser"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="0.5"
                app:layout_constraintVertical_chainStyle="packed"
                android:layout_marginStart="15dp"/>

            <TextView
                android:id="@+id/settingAccountTxtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/colorTextWhite"
                app:layout_constraintTop_toBottomOf="@id/settingAccountTxtName"
                app:layout_constraintBottom_toBottomOf="@id/settingAccountImgUser"
                app:layout_constraintLeft_toLeftOf="@id/settingAccountTxtName"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="0.0"
                android:layout_marginTop="5dp"/>

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

</ScrollView>