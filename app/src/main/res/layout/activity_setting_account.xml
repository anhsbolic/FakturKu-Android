<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBgGray"
    tools:context=".ui.activity.settingAccount.SettingAccountActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/settingAccountHeader"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/colorPrimary"
        app:layout_anchorGravity="top">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/settingAccountImgUser"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:civ_border_color="@android:color/white"
            app:civ_border_width="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintVertical_bias="0.5"/>

        <TextView
            android:id="@+id/settingAccountTxtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/colorTextWhite"
            app:layout_constraintTop_toTopOf="@id/settingAccountImgUser"
            app:layout_constraintBottom_toTopOf="@id/settingAccountTxtEmail"
            app:layout_constraintLeft_toRightOf="@id/settingAccountImgUser"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginStart="15dp"/>

        <TextView
            android:id="@+id/settingAccountTxtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/colorTextWhite"
            app:layout_constraintTop_toBottomOf="@id/settingAccountTxtName"
            app:layout_constraintBottom_toBottomOf="@id/settingAccountImgUser"
            app:layout_constraintLeft_toLeftOf="@id/settingAccountTxtName"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginTop="5dp"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/settingAccountFabEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_fab_edit"
        app:fabSize="auto"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"
        app:backgroundTint="@color/colorFab"
        app:layout_anchor="@id/settingAccountHeader"
        app:layout_anchorGravity="bottom|end"
        android:layout_marginEnd="20dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="140dp"
        android:paddingTop="40dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="5"
                            android:background="@color/colorPrimaryDark"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:text="@string/setting_account_personal_info"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="@color/colorPrimaryDark"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/settingAccountTxtPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/setting_account_info_default"
                        android:textSize="14sp"
                        android:drawableStart="@drawable/ic_form_phone"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="20dp"/>

                    <TextView
                        android:id="@+id/settingAccountTxtAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/setting_account_info_default"
                        android:textSize="14sp"
                        android:drawableStart="@drawable/ic_form_address"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="20dp"/>


                    <TextView
                        android:id="@+id/settingAccountTxtCity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/setting_account_info_default"
                        android:textSize="14sp"
                        android:drawableStart="@drawable/ic_form_city"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="20dp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="4"
                            android:background="@color/colorPrimaryDark"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:text="@string/setting_account_company_info"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="@color/colorPrimaryDark"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/settingAccountTxtCompanyName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/setting_account_info_default"
                        android:textSize="14sp"
                        android:drawableStart="@drawable/ic_form_company"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="20dp"/>

                    <TextView
                        android:id="@+id/settingAccountTxtCompanyEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/setting_account_info_default"
                        android:textSize="14sp"
                        android:drawableStart="@drawable/ic_form_mail"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="20dp"/>

                    <TextView
                        android:id="@+id/settingAccountTxtCompanyPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/setting_account_info_default"
                        android:textSize="14sp"
                        android:drawableStart="@drawable/ic_form_phone"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="20dp"/>

                    <TextView
                        android:id="@+id/settingAccountTxtCompanyAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/setting_account_info_default"
                        android:textSize="14sp"
                        android:drawableStart="@drawable/ic_form_address"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="20dp"/>

                    <TextView
                        android:id="@+id/settingAccountTxtCompanyCity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/setting_account_info_default"
                        android:textSize="14sp"
                        android:drawableStart="@drawable/ic_form_city"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="20dp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</android.support.design.widget.CoordinatorLayout>