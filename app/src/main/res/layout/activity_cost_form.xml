<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/costFormCoordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundGray"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".ui.activity.costForm.CostFormActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="3dp"
                app:cardElevation="3dp"
                app:contentPaddingTop="30dp"
                app:contentPaddingBottom="10dp"
                app:contentPaddingLeft="16dp"
                app:contentPaddingRight="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/costFormName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/cost_form_name"
                        android:textSize="14sp"
                        android:textColorHint="@color/colorTextPrimary"
                        android:inputType="textPersonName|textCapWords"
                        android:theme="@style/MyTextInputLayoutStyle"
                        android:drawableStart="@drawable/ic_form_cost"
                        android:drawablePadding="16dp"
                        android:paddingBottom="16dp"
                        android:layout_marginBottom="16dp"/>

                    <EditText
                        android:id="@+id/costFormCostPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/cost_form_cost_price"
                        android:textSize="14sp"
                        android:textColorHint="@color/colorTextPrimary"
                        android:inputType="number"
                        android:theme="@style/MyTextInputLayoutStyle"
                        android:drawableStart="@drawable/ic_form_price_tag"
                        android:drawablePadding="16dp"
                        android:paddingBottom="16dp"
                        android:layout_marginBottom="16dp"/>

                    <EditText
                        android:id="@+id/costFormNotes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/cost_form_notes"
                        android:textSize="14sp"
                        android:textColorHint="@color/colorTextPrimary"
                        android:inputType="textMultiLine"
                        android:theme="@style/MyTextInputLayoutStyle"
                        android:drawableStart="@drawable/ic_form_notes"
                        android:drawablePadding="16dp"
                        android:paddingBottom="16dp"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/colorTextPrimary"
                        android:text="@string/cost_form_attention"
                        android:layout_gravity="end"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/costFormBtnSave"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/cost_form_save"
                android:textSize="16sp"
                android:theme="@style/PrimaryButton"/>

        </LinearLayout>

    </ScrollView>

</android.support.design.widget.CoordinatorLayout>