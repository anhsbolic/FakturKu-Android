<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/invoiceCoordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBgSoftGray"
    tools:context="com.fakturku.aplikasi.ui.fragment.invoiceFragment.InvoiceFragment">

    <com.omadahealth.github.swipyrefreshlayout.library.SwipyRefreshLayout
        android:id="@+id/invoiceSwipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srl_direction="bottom"
        android:visibility="gone">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/invoiceRv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="100dp"
            android:clipToPadding="false"/>

    </com.omadahealth.github.swipyrefreshlayout.library.SwipyRefreshLayout>

    <ImageView
        android:id="@+id/invoiceImgPlaceHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_placeholder_invoice"
        android:layout_gravity="center"
        tools:ignore="ContentDescription"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/invoiceFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_add_fab"
        app:fabSize="normal"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"
        app:backgroundTint="@color/colorFab"/>

    <LinearLayout
        android:id="@+id/invoiceLayoutFabSell"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom|end"
        android:gravity="center"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="100dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorFabSell"
            android:text="@string/invoice_fab_sell"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="16sp"
            android:textColor="@color/colorTextWhite"
            android:layout_marginEnd="15dp"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/invoiceFabSell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_fab_sell"
            app:fabSize="mini"
            app:backgroundTint="@color/colorFabSell"
            android:layout_marginEnd="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/invoiceLayoutFabBuy"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom|end"
        android:gravity="center"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="160dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorFabBuy"
            android:text="@string/invoice_fab_buy"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="16sp"
            android:textColor="@color/colorTextWhite"
            android:layout_marginEnd="15dp"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/invoiceFabBuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_fab_buy"
            app:fabSize="mini"
            app:backgroundTint="@color/colorFabBuy"
            android:layout_marginEnd="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/invoiceLayoutFabCost"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom|end"
        android:gravity="center"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="220dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorFabCost"
            android:text="@string/invoice_fab_cost"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="16sp"
            android:textColor="@color/colorTextWhite"
            android:layout_marginEnd="15dp"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/invoiceFabCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_fab_cost"
            app:fabSize="mini"
            app:backgroundTint="@color/colorFabCost"
            android:layout_marginEnd="10dp"/>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/invoiceProgressLayout"
        android:layout_width="220dp"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/invoiceProgressBar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:theme="@style/CircularProgressPrimary"
            android:layout_gravity="center"/>

    </android.support.v7.widget.CardView>

</android.support.design.widget.CoordinatorLayout>