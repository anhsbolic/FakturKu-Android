<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.search.SearchActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/searchToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/searchEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="cari di sini"
                android:inputType="text"
                android:textSize="14sp"
                android:textColor="@color/colorTextWhite"
                android:textColorHint="@color/colorTextWhite"
                android:theme="@style/MyTextInputLayoutFullScreen"
                android:paddingBottom="16dp"
                android:layout_toStartOf="@id/searchImg"/>

            <ImageView
                android:id="@+id/searchImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_search_white"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/searchTxtAddNew"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Tambah Baru"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textSize="14sp"
        android:drawableStart="@drawable/ic_add_primary"
        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:clickable="true"
        android:focusable="true"/>

    <ListView
        android:id="@+id/searchLVResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>