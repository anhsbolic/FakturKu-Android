<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".ui.fragment.settingsFragment.MySettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp">
        
        <TextView
            android:id="@+id/mySettingsAccount"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="@string/my_settings_account"
            android:textSize="18sp"
            android:textColor="@color/colorTextBlack"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/ic_settings_account"
            android:drawablePadding="20dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLineSeparator"/>

        <TextView
            android:id="@+id/mySettingsInvoice"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="@string/my_settings_invoice"
            android:textSize="18sp"
            android:textColor="@color/colorTextBlack"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/ic_settings_invoice"
            android:drawablePadding="20dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLineSeparator"/>

    </LinearLayout>

</ScrollView>