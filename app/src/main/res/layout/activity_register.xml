<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".ui.activity.register.RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/registerTxtTitle"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="@string/register_title"
                android:textColor="@color/colorTextWhite"
                android:textSize="24sp"
                android:gravity="center"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="20dp"
                tools:ignore="RelativeOverlap" />

            <ImageView
                android:id="@+id/registerImgLogo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_receipt_white"
                tools:ignore="ContentDescription"
                android:layout_toStartOf="@id/registerTxtTitle"
                android:layout_alignBottom="@id/registerTxtTitle"
                android:layout_marginEnd="10dp"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/registerEtNameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/MyTextInputLayoutFullScreen"
                android:layout_below="@id/registerTxtTitle"
                android:layout_marginTop="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:hint="@string/register_name"
                android:textColorHint="@color/colorTextWhite"
                app:hintEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/registerEtName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextWhite"
                    android:textSize="16sp"
                    android:inputType="textPersonName|textCapWords"
                    android:paddingBottom="20dp"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/registerEtEmailLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/MyTextInputLayoutFullScreen"
                android:layout_below="@id/registerEtNameLayout"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:hint="@string/register_email"
                android:textColorHint="@color/colorTextWhite"
                app:hintEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/registerEtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextWhite"
                    android:textSize="16sp"
                    android:inputType="textEmailAddress"
                    android:paddingBottom="20dp"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/registerEtPasswordLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/MyTextInputLayoutFullScreen"
                android:layout_below="@id/registerEtEmailLayout"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:hint="@string/register_password"
                android:textColorHint="@color/colorTextWhite"
                app:hintEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/registerEtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextWhite"
                    android:textSize="16sp"
                    android:inputType="textPassword"
                    android:paddingBottom="20dp"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/registerEtConfirmPasswordLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/MyTextInputLayoutFullScreen"
                android:layout_below="@id/registerEtPasswordLayout"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="40dp"
                android:hint="@string/register_confirm_password"
                android:textColorHint="@color/colorTextWhite"
                app:hintEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/registerEtConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextWhite"
                    android:textSize="16sp"
                    android:inputType="textPassword"
                    android:paddingBottom="20dp"/>

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/registerBtnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/registerEtConfirmPasswordLayout"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:theme="@style/WhiteButton"
                android:text="@string/register_btn_register"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:padding="20dp"/>

            <Button
                android:id="@+id/registerBtnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:text="@string/register_button_login"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textColor="@color/colorTextWhite"
                android:layout_below="@id/registerBtnRegister"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>

        </RelativeLayout>

    </ScrollView>

    <android.support.v7.widget.CardView
        android:id="@+id/registerCardProgress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/colorBgProgress"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintHorizontal_bias="0.5"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:theme="@style/CircularProgressPrimary"/>

    </android.support.v7.widget.CardView>

</RelativeLayout>